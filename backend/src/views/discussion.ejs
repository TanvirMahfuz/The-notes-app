<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />

    <link rel="stylesheet" href="/css/discussion.css" />
    <link
      rel="stylesheet"
      href="/css/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <title>The notes APP</title>
  </head>
  <body>
    <%- include("includes/nav.ejs") %>
    <main>
      <section id="hero">
        <div class="container">
          <div class="t-text">
            <h1 id="text">Discussion</h1>
            <img
              src="/images/speech-bubbles-303206_1280.png"
              alt=""
              height="100"
              width="100"
            />
          </div>
          <img src="/images/death-7333595_1280.png" alt="" class="einstein" />
        </div>
      </section>
      <% for (let note of data){ %>
      <div class="container">
        <h2 class="title"><%= note.name%></h2>
        <div class="threads">
          <h3 class="person"><%= note.publisher %></h3>
          <p class="blog"><%= note.description %></p>
        </div>
        <%for (let comment of note.comments){ %>
        <div class="comments">
          <h4 class="person" style="margin-top: 10px">
            <%= comment.commenterName %>
          </h4>
          <p class="evaluation"><%= comment.comment %></p>
        </div>
        <% } %>
        <div class="judgment">
          <form action="/api/notes/comment" method="post" name="comments">
            <div class="reactions">
              <div class="left">
                <input type="hidden" name="noteId" value="<%= note.id %>" />
                <textarea
                  name="comment"
                  id="comment"
                  placeholder="Write a Comment..."
                ></textarea>
              </div>
              <div class="right">
                <div class="circle">
                  <button type="submit">
                    <i class="bi bi-arrow-right-short"></i>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <% } %>
    </main>
    <footer></footer>
  </body>
</html>
