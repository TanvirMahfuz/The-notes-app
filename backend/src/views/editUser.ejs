<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Edit Profile</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");
      @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css");
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Raleway", sans-serif;
        transition: ease-in-out 250ms;
      }
      ul li {
        text-align: center;
        display: inline-block;
        margin: 0px 5px;
      }
      ul li a {
        text-decoration: none;
        color: black;
        padding: 10px;
      }
    </style>
  </head>
  <body style="background-color: #e6f4f1a0">
    <%- include('includes/navbar.ejs') %>
    <div class="container w-50 mt-5 rounded-5" style="height: fit-content">
      <h1 style="text-align: center; padding: 10px">Edit Form</h1>
      <form
        action="/api/user/edit"
        method="post"
        enctype="multipart/form-data"
        class="w-100 p-5 mb-4 border shadow-lg rounded-5 bg-white"
      >
        <!-- Name -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control form-control-lg"
            id="name"
            name="name"
            value="<%= user.name %>"
          />
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control form-control-lg"
            id="email"
            name="email"
            value="<%= user.email %>"
          />
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label">Profile Picture</label>
          <input
            class="form-control form-control-lg"
            type="file"
            id="image"
            name="profileImage"
            accept="image/*"
          />
        </div>
        <!-- designation -->
        <div class="mb-3">
          <label for="designation" class="form-label">designation</label>
          <input
            type="text"
            class="form-control form-control-lg"
            id="designation"
            name="designation"
            value="<%= user.designation %>"
          />
        </div>

        <!-- github -->
        <div class="mb-3">
          <label for="github" class="form-label">github</label>
          <input
            type="text"
            class="form-control form-control-lg"
            id="github"
            name="github"
            value="<%= user.github %>"
          />
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label"
            >New Password (optional)</label
          >
          <div class="input-group">
            <input
              type="password"
              class="form-control form-control-lg"
              id="password"
              name="password"
            />
            <button
              class="btn btn-outline-secondary"
              type="button"
              id="togglePassword1"
            >
              <i class="bi bi-eye-slash-fill"></i>
            </button>
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3">
          <label for="confirmPassword" class="form-label"
            >Confirm New Password</label
          >
          <div class="input-group">
            <input
              type="password"
              class="form-control form-control-lg"
              id="confirmPassword"
              name="confirmPassword"
              disabled
            />
            <button
              class="btn btn-outline-secondary"
              type="button"
              id="togglePassword2"
            >
              <i class="bi bi-eye-slash-fill"></i>
            </button>
          </div>
        </div>

        <!-- Submit -->
        <div class="w-100 text-center">
          <button
            type="submit"
            class="btn btn-lg btn-dark rounded-4"
            style="margin: 0px auto; margin-top: 15px"
          >
            Save Changes
          </button>
        </div>
      </form>
    </div>

    <script>
      const passwordInput = document.getElementById("password");
      const confirmPasswordInput = document.getElementById("confirmPassword");
      const togglePasswordButton1 = document.getElementById("togglePassword1");
      const togglePasswordButton2 = document.getElementById("togglePassword2");

      // Enable confirm password only if password is filled
      passwordInput.addEventListener("input", () => {
        confirmPasswordInput.disabled = passwordInput.value === "";
      });

      togglePasswordButton1.addEventListener("click", () => {
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;
        togglePasswordButton1.innerHTML =
          type === "password"
            ? '<i class="bi bi-eye-slash-fill"></i>'
            : '<i class="bi bi-eye-fill"></i>';
      });

      togglePasswordButton2.addEventListener("click", () => {
        const type =
          confirmPasswordInput.type === "password" ? "text" : "password";
        confirmPasswordInput.type = type;
        togglePasswordButton2.innerHTML =
          type === "password"
            ? '<i class="bi bi-eye-slash-fill"></i>'
            : '<i class="bi bi-eye-fill"></i>';
      });
    </script>
  </body>
</html>
