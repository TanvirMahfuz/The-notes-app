<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/takenotes.css" />
    <link
      rel="stylesheet"
      href="/css/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>The notes APP</title>
  </head>
  <body style="background-color: #e6f4f1a0">
    <%- include("includes/navbar.ejs") %>
    <main>
      <div class="container">
        <form
          action="/api/notes/new-note"
          class="form"
          method="post"
          name="topicform"
          enctype="multipart/form-data"
        >
          <div class="topic-in">
            <label for="topic" style="margin-top: 7px"
              >Topic <i class="bi bi-lightbulb"></i>:</label
            >
            <input
              type="text"
              id="topic"
              name="topic"
              placeholder="enter topic name"
              required
            />
          </div>
          <br />

          <label for="desc">Description:</label>
          <div class="desc">
            <textarea
              name="description"
              id="des"
              placeholder="enter description"
            ></textarea>
          </div>

          <div class="upload">
            <!-- <label for="doc" class="doc"
              >Upload PDF <i class="bi bi-file-earmark-pdf"></i>
            </label> -->
            <input type="file" id="doc" name="doc" required />
          </div>
          <div class="foot-foot">
            <div class="btn">
              <button type="submit" class="wait-btn">
                submit
                <i class="bi bi-cloud-arrow-up"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
