<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Profile</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");
      @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css");
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Raleway", sans-serif;
        transition: ease-in-out 250ms;
      }

      main .hero .container .img-details {
        width: 60%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      main .hero .container .img-details h4 {
        font-weight: 500;
      }
      main .hero .container .img-container {
        width: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      main .container .img-container img {
        width: 300px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.749);
        transition: all 0.3s ease-in-out;
      }
      .img-container img:hover {
        transform: scale(1.1) translateX(-20px);
      }
      .img-details:hover {
        transform: scale(1.1);
      }
      .img-details h1 {
        font-size: 50px;
        font-weight: 700;
        margin-bottom: 10px;
      }
      .img-details h4 {
        font-size: 30px;
        font-weight: 700;
        margin-bottom: 10px;
      }
      .hover-link {
        color: #333;
        transition: color 0.6s ease-in-out, text-shadow 0.3s ease;
      }

      .hover-link:hover {
        color: #0f5b82;
        text-shadow: 1px 1px 5px rgba(0, 123, 255, 0.5);
      }
    </style>
  </head>
  <body>
    <%- include("includes/navbar.ejs") %>
    <main>
      <!-- Hero Section -->
      <section class="hero py-5">
        <div
          class="container profile-container shadow-sm bg-light rounded-5 p-4"
          style="height: fit-content"
        >
          <div class="row">
            <h3>Profile Section</h3>
          </div>
          <div class="row body mt-4 align-items-center">
            <div class="col-md-2 d-flex justify-content-center">
              <div
                class="circle-img shadow-lg"
                style="
                  height: 150px;
                  width: 150px;
                  border-radius: 50%;
                  overflow: hidden;
                "
              >
                <img
                  src="/images/AAmishu.jpg"
                  alt=""
                  height="100%"
                  width="100%"
                  style="object-fit: cover; object-position: center"
                />
              </div>
            </div>
            <div class="col-md-10">
              <div class="container">
                <div class="row mb-3">
                  <h3><%= user.name %></h3>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <p>Email</p>
                    <h4><%= user.email %></h4>
                  </div>
                  <div class="col-md-4">Phone</div>
                  <div class="col-md-4">Social</div>
                </div>
              </div>
            </div>
          </div>
          <div class="row footer mt-5">
            <div class="col-md-3">
              <div
                class="card py-2 px-4 bg-light shadow-sm rounded-4 d-flex justify-content-center align-items-center"
                style="width: 70%; margin: 0px auto"
              >
                <h5><%= notes.length %></h5>
                <p>Publications</p>
              </div>
            </div>
            <div class="col-md-3">
              <div
                class="card bg-light py-2 px-4 shadow-sm rounded-4 d-flex justify-content-center align-items-center"
                style="width: 70%; margin: 0px auto"
              >
                <h5>ratings</h5>
                <p>ratings</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Publications Section -->
      <section class="publications-container py-5">
        <div class="container">
          <% let cnt = notes.length; %> <% let rows = Math.floor(cnt / 3) + (cnt
          % 3 ? 1 : 0); %> <% if (cnt > 0) { %> <% for (let i = 0; i < rows;
          i++) { %>
          <div class="row">
            <% for (let j = 0; j < 3; j++) { %> <% if (cnt === 0) { break; } %>
            <% let note = notes[notes.length - cnt]; cnt--; %>
            <div class="col-md-4">
              <div
                style="
                  background: linear-gradient(
                    to bottom right,
                    #ffffff,
                    #e0e0e0
                  );
                  border-radius: 10px;
                  border: none;
                "
                class="card mb-4 shadow-sm"
              >
                <div class="card-body">
                  <h5 class="card-title">
                    <a
                      href="/api/notes/<%= note.name %>"
                      class="text-decoration-none hover-link"
                    >
                      <%= note.name %>
                    </a>
                  </h5>
                  <p class="card-text text-muted"><%= note.description %></p>
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <% } %> <% } else { %>
          <p class="text-center text-muted">No notes available.</p>
          <% } %>
        </div>
      </section>
    </main>

    <script>
      function escapeNewlines(jsonString) {
        return jsonString.replace(/[\r\n]+/g, "\\n");
      }

      async function updateClicked(id) {
        try {
          window.location.href = "/api/notes/edit-page?id=" + id;
        } catch (error) {
          console.error("Error parsing JSON:", error);
        }
      }

      async function deleteClicked(id) {
        const isConfirmed = confirm(
          "Are you sure you want to delete this note?"
        );

        if (isConfirmed) {
          try {
            const response = await fetch("/api/notes/edit-page?id=" + id, {
              method: "DELETE",
            });

            if (!response.ok) {
              throw new Error("Failed to delete the note.");
            }

            const data = await response.json();
            console.log("Deleted:", data);

            window.location.reload();
          } catch (error) {
            console.error("Error:", error.message);
            alert("Failed to delete the note. Please try again.");
          }
        } else {
          console.log("Deletion cancelled.");
        }
      }
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
