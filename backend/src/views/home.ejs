<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/homepage.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>The notes APP</title>
  </head>
  <body style="background-color: #e6f4f1a0">
    <%- include("includes/navbar.ejs") %>
    <main>
      <section id="hero">
        <div class="container rounded-4 p-3 shadow-lg">
          <div class="t-text">
            <h1 id="text" style="color: white">The Notes APP</h1>
            <img
              src="/images/feather-8290037_1280.png"
              alt=""
              height="100"
              width="100"
            />
          </div>

          <img
            src="/images/albert-einstein-8228950_1280.png"
            alt=""
            class="einstein"
          />
        </div>
      </section>

      <% for (let note of data) { %>
      <div class="container shadow-lg rounded-4 p-3">
        <div class="title">
          <h2><a href="/api/notes/<%=note.name %>"><%= note.name %></a></h2>
        </div>
        <div class="des"><%= note.description %></div>
        <div class="additional-info">
          <ul>
            <li>
              <a
                href="https://www.youtube.com/results?search_query=<%=note.name %>"
                >YouTube <i class="bi bi-youtube"></i
              ></a>
            </li>
            <li>
              <a href="/pdf/<%=note.attachedPdf %>" target="_blank"
                >pdf <i class="bi bi-file-earmark-pdf-fill"></i
              ></a>
            </li>
            <li>
              <a href="/api/notes/<%=note.name %>"
                >Discussion <i class="bi bi-chat-dots-fill"></i
              ></a>
            </li>
          </ul>
        </div>
      </div>
      <% } %>
    </main>
    <footer></footer>
  </body>
</html>
